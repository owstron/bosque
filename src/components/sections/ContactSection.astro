---
import Section from '../ui/Section.astro';
import Button from '../ui/Button.astro';
import { RESTAURANT_INFO } from '../../utils/constants';
---

<Section id="contact" title="Visit Us">
  <div class="contact-content">
    <div class="contact-info">
      <div class="info-block">
        <h3>Address</h3>
        <p>{RESTAURANT_INFO.address.full}</p>
      </div>

      <div class="info-block">
        <h3>Hours</h3>
        {Object.entries(RESTAURANT_INFO.hours).map(([day, hours]) => (
          <p><strong>{day}:</strong> {hours}</p>
        ))}
      </div>

      <div class="info-block">
        <h3>Contact</h3>
        <p>Phone: <a href={`tel:${RESTAURANT_INFO.contact.phone}`}>{RESTAURANT_INFO.contact.phone}</a></p>
        <p>Email: <a href={`mailto:${RESTAURANT_INFO.contact.email}`}>{RESTAURANT_INFO.contact.email}</a></p>
      </div>

      <div class="info-block">
        <h3>Reservations</h3>
        <p>We recommend making a reservation to ensure your preferred seating time.</p>
        <Button href={RESTAURANT_INFO.social.resy} target="_blank" variant="primary">
          Reserve on Resy
        </Button>
      </div>
    </div>

    <div class="map-container">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d6307.175731085653!2d-122.42910968794128!3d37.77626077186809!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x808581cfde060919%3A0xb824cfcba408349e!2sbosque!5e0!3m2!1sen!2sus!4v1757750086788!5m2!1sen!2sus"
        width="100%"
        height="450"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
        title="Bosque Restaurant Location"
      ></iframe>
    </div>
  </div>
</Section>

<style>
  .contact-content {
    display: grid;
    gap: 3rem;
    margin-top: 2rem;
  }

  .contact-info {
    display: grid;
    gap: 2rem;
  }

  .info-block h3 {
    color: var(--color-primary);
    margin-bottom: 1rem;
    font-size: 1.3rem;
  }

  .info-block p {
    margin-bottom: 0.5rem;
    line-height: 1.6;
  }

  .info-block a {
    color: var(--color-secondary);
    text-decoration: underline;
  }

  .info-block a:hover {
    color: var(--color-primary);
  }

  .map-container {
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
  }


  @media (min-width: 768px) {
    .contact-content {
      grid-template-columns: 1fr 1fr;
    }

    .contact-info {
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
    }
  }

  @media (min-width: 1024px) {
    .contact-info {
      grid-template-columns: 1fr;
    }
  }
</style>