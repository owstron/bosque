---
import { Image } from 'astro:assets';
import forestDining from '../../assets/images/postcard-with-background.png';
import Button from '../ui/Button.astro';
import { RESTAURANT_INFO } from '../../utils/constants';
---

<section id="home" class="hero">
  <Image
    src={forestDining}
    alt="Forest dining table setup"
    class="hero-bg"
    loading="eager"
  />
  <div class="hero-content">
    <h1>bosque</h1>
    <p>An intimate wine bar in the heart of San Francisco</p>
    <Button
      href={RESTAURANT_INFO.social.resy}
      target="_blank"
      variant="primary"
    >
      Reserve on Resy
    </Button>
  </div>
</section>

<style>
  .hero {
    position: relative;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: -2;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(245, 245, 220, 0.8);
    z-index: -1;
  }

  .hero-content {
    z-index: 1;
    max-width: 600px;
    padding: 2rem;
  }

  h1 {
    font-size: clamp(3rem, 8vw, 6rem);
    margin-bottom: 1rem;
    color: var(--color-primary);
    font-weight: normal;
  }

  p {
    font-size: 1.3rem;
    margin-bottom: 2rem;
    color: var(--color-secondary);
    font-style: italic;
  }

  @media (max-width: 768px) {
    .hero-content {
      padding: 1rem;
    }

    p {
      font-size: 1.1rem;
    }
  }
</style>